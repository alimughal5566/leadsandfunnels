</div>

<!-- Advance settings modal -->
<div class="modal fade" id="advance-setting">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Advanced Settings</h5>
            </div>
            <div class="modal-body pb-0">
                <div class="form-group">
                    <div class="advance-country-code-parent select2-parent">
                        <select data-content-number-format name="country-code" class="country-code"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="advance-phone-format-parent select2-parent">
                        <select data-content-number-format name="phone-format" class="phone-format"></select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="action">
                    <ul class="action__list">
                        <li class="action__item">
                            <button type="button" class="button button-bold button-cancel" data-dismiss="modal">Cancel</button>
                        </li>
                        <li class="action__item">
                            <button disabled class="button button-bold button-primary" data-phone-settings-save type="button" data-dismiss="modal">Save</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
