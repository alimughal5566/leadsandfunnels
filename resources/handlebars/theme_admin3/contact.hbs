<script src="{{app.assets}}/js/funnel/scripts/funnel-question-contact-info-overlay.js?v={{app.LP_VERSION}}"></script>
<div class="funnel-content funnel-contact-info-overlay funnel-overlay">
{{#with step-form.steps.[0]}}
