                    <ul class="organize-group__head">
                        <span>Input Type</span>
                        <span>Options</span>
                    </ul>
                    <ul class="organize-group__list">
                        <li class="organize-group__item organize-group_sorting-row">
                            <span class="organize-group__name" data-id="1">Name</span>
                            <span class="organize-group__action">
                                <i class="ico ico-dragging"></i>
                            </span>
                        </li>
                        <li class="organize-group__item organize-group_sorting-row">
                            <span class="organize-group__name" data-id="2">Email</span>
                            <span class="organize-group__action">
                                <i class="ico ico-dragging"></i>
                            </span>
