<script src="{{app.assets}}/js/funnel/scripts/text-field-overlay.js"></script>
<div class="funnel-content funnel-textfield-overlay funnel-overlay">
    {{#with options}}
    <div class="panel-aside advance-option-active">
        <div class="panel-aside__head">
            <div class="col-left">
                <h4 class="panel-aside__title has-icon txtfield-icon">
                    <span>
                        <i class="ico ico-select-text head-icon"></i>
                        Text Field
                    </span>
                </h4>
            </div>
            <div class="col-right">
                <span class="ico-arrow-right back-ico"></span>
                <!-- Funnel Feature icons -->
                {{> funnel-feature-icons }}
            </div>
        </div>
        <div class="panel-aside-wrap-overlay">
            <div class="panel-aside-holder">
                <div class="panel-aside__body">
                    <!-- Tabs -->
                    <ul class="nav nav-tabs fb-tab">
                        <li class="nav-item fb-tab__item">
                            <a href="#" data-nav-id="short_text" class="fb-tab__link short-text {{#ifCond ../question-type '==' 'text'}}active{{/ifCond}}">Short Text Input</a>
                        </li>
                        <li class="nav-item fb-tab__item">
                            <a href="#" data-nav-id="long_text" class="fb-tab__link long-text {{#ifCond ../question-type '==' 'textarea'}}active{{/ifCond}}">Long Text Input</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane-wrap">
                            <!-- Question & Description -->
                            {{> question-description }}
                            <!-- Field Label -->
                            {{> field-label }}
                            <!-- CTA Button -->
                            {{> cta-button }}
                            <!-- More Options -->
                            <div class="form-group advance-options-wrap {{#ifCond edit '==' 1}}active{{/ifCond}}" data-parent>
                                <div class="fb-modal__row">
                                    <div class="fb-modal__option opener-text">
                                        Advanced Options
                                    </div>
                                    <div class="fb-modal__control">
                                        <div class="fb-modal__handler {{#ifCond edit '==' 1}}open{{/ifCond}}" data-handler>
                                            <i class="fa fa-chevron-down opener-icon"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="fb-modal__border-row data-handler-slide" data-handler-slide style="display: {{#ifCond edit '==' 1}}block{{else}}none{{/ifCond}}">
                                    <!-- security message -->
                                    {{> security-message}}
                                    <!-- Additional -->
                                    {{> additional-content}}
                                    <!-- Fields detail -->
                                    {{> field-details}}
                                    <!-- Settings -->
                                    <div class="form-group" data-parent>
                                        <div class="tag-row">
                                            <div class="tag-row__title">Settings</div>
                                        </div>
                                        {{> auto-cursor-focus}}
                                        {{> required}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-aside__footer">
            <div class="action">
                <ul class="action__list justify-content-end">
                    <li class="action__item">
                        <button class="button button-cancel">Close</button>
                    </li>
                    <li class="action__item">
                        <button class="button button-secondary">Save</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    {{/with}}
    <input data-id="ques_id" hidden value="{{ques_id}}">
    <!-- contain the main content of the page -->
    <div id="content">

        <!-- Question Editor Header -->
        {{> question-header }}

        <!-- iframe include for question -->
        <div class="funnel-iframe-holder" {{#ifCond zoom '==' 1}}style="transform:scale({{zoom_value}})"{{/ifCond}}>
            <iframe scrolling="no" src="{{app.url}}/previewbars/textfield-preview.php?ques_id={{ques_id}}&ls_key={{ls_key}}" class="question-iframe question-preview-iframe"></iframe>
        </div>
    </div>
</div>
<!--button icon list-->
{{> button-icon-list }}

<!-- Mobile Mode -->
{{> mobile-mode }}
