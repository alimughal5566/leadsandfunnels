                                        <input id="zip-code-icon-size-slider" class="form-control" type="text" data-silder-ranger-icon>
                                        <input type="hidden" class="zip-code-icon-size" data-slider-icon data-field-name="cta-button-settings.button-icon-size" value="{{cta-button-settings.button-icon-size}}">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{#ifCond @root/question-type '!==' 'slider'}}
                        <div class="fb-checkbox hide-checkbox {{#ifCond required '==' 0}} d-none {{/ifCond}}" data-cta-button >
                            <input class="fb-checkbox__input hide-checkbox-field" type="checkbox" id="zip-code-showonly-option" data-field-name="cta-button-settings.enable-hide-until-answer" {{#ifCond cta-button-settings.enable-hide-until-answer '==' 1}}checked{{/ifCond}}>
                            <label for="zip-code-showonly-option" class="fb-checkbox__label">
                                <div class="fb-checkbox__box">
                                    <div class="fb-checkbox__inner-box"></div>
                                </div>
                                <div class="fb-checkbox__caption">
                                    Hide CTA button until the question is&nbsp;answered
                                </div>
                            </label>
                        </div>
                    {{/ifCond}}
                </div>
            </div>
        </div>
{{/ifCond}}
